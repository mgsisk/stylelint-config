{
  "name": "@mgsisk/stylelint-config",
  "version": "0.4.4",
  "description": "Opinionated stylelint configurations for CSS development.",
  "main": "index.js",
  "scripts": {
    "lint.js": "eslint '**/*.js' '**/.*.js'",
    "lint.json": "printf 'package-lock.json package.json' | xargs -n1 jsonlint -q",
    "lint.md": "remark . .github/ --ignore-pattern 'LICENSE*'",
    "lint.sh": "shellcheck *.sh",
    "lint.yml": "yamllint '**/*.yml' '**/.*.yml'",
    "test": "tap test --100 --coverage-report=lcov --no-browser",
    "preversion": "npm test",
    "version": "git add --all",
    "postversion": "git push --follow-tags"
  },
  "repository": "github:mgsisk/stylelint-config",
  "keywords": [
    "css",
    "lint",
    "linter",
    "linting",
    "stylelint",
    "stylelintconfig",
    "stylelint-config",
    "stylelint-config-wordpress",
    "wordpress"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": "https://github.com/mgsisk/stylelint-config/issues",
  "homepage": "https://github.com/mgsisk/stylelint-config",
  "files": [
    "wordpress.js"
  ],
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "dependencies": {
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-wordpress": "^16.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.0.0",
    "stylelint-use-nesting": "^2.0.0"
  },
  "devDependencies": {
    "@mgsisk/eslint-config": "^1.0.0",
    "@mgsisk/remark-lint-config": "^0.3.0",
    "eslint": "^6.8.0",
    "jsonlint": "^1.6.3",
    "remark-cli": "^8.0.0",
    "shellcheck": "^0.4.2",
    "stylelint": "^12.0.1",
    "tap": "^14.10.7",
    "yaml-lint": "^1.2.4"
  },
  "peerDependencies": {
    "stylelint": ">= 10.1.0"
  }
}
