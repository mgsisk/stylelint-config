{
  "name": "@mgsisk/stylelint-config",
  "version": "0.1.3",
  "description": "Opinionated stylelint configurations for CSS development.",
  "main": "index.js",
  "scripts": {
    "clean": "find . -name '*.DS_Store' -type f -delete",
    "lint": "run npm lint.js",
    "lint.js": "eslint '*.js' '.*.js' 'tests/**/*.js'",
    "lint.json": "find . -name '*.json' ! -path '*/node_modules/*' | xargs -L1 jsonlint -q",
    "lint.md": "remark .",
    "lint.yml": "find . -name '*.yml' ! -path '*/node_modules/*' | xargs -L1 js-yaml",
    "preversion": "npm test",
    "test": "npm run lint.js && tap tests --coverage-report=lcovonly"
  },
  "repository": "github:mgsisk/stylelint-config",
  "keywords": [
    "css",
    "lint",
    "linter",
    "linting",
    "stylelint",
    "stylelintconfig",
    "stylelint-config",
    "stylelint-config-wordpress",
    "wordpress"
  ],
  "author": "mgsisk <me@mgsisk.com> (https://mgsisk.com)",
  "license": "ISC",
  "bugs": {
    "email": "help@mgsisk.com",
    "url": "https://github.com/mgsisk/stylelint-config/issues"
  },
  "homepage": "https://github.com/mgsisk/stylelint-config#readme",
  "dependencies": {
    "stylelint-a11y": "^1.1.9",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-wordpress": "^13.1.0",
    "stylelint-declaration-block-no-ignored-properties": "^1.1.0",
    "stylelint-no-indistinguishable-colors": "^1.2.1",
    "stylelint-order": "^2.0.0"
  },
  "devDependencies": {
    "@mgsisk/eslint-config": "^0.3.1",
    "@mgsisk/remark-lint-config": "^0.1.1",
    "eslint": "^5.9.0",
    "js-yaml": "^3.12.0",
    "jsonlint": "^1.6.3",
    "remark-cli": "^6.0.1",
    "stylelint": "^9.9.0",
    "tap": "^12.1.0"
  },
  "peerDependencies": {
    "stylelint": ">= 9.9.0"
  }
}
